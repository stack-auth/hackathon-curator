import * as vscode from 'vscode';

export function activate(context: vscode.ExtensionContext) {
  const disposable = vscode.commands.registerCommand('ext.sayHello', async () => {
    const ed = vscode.window.activeTextEditor;
    if (!ed) { vscode.window.showInformationMessage('No editor'); return; }
    const text = ed.document.getText();
    const sel = ed.selection;
    const picked = text.substring(ed.document.offsetAt(sel.start), ed.document.offsetAt(sel.end)) || text;
    const wordCount = picked.split(/\s+/).filter(Boolean).length;
    vscode.window.showInformationMessage(`Words: ${wordCount}`);
  });
  context.subscriptions.push(disposable);
}

export function deactivate() {}

