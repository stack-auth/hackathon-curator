module.exports = {
  Query: {
    users: async (_, args, { db }) => {
      const q = String(args.q || '').replace(/'/g, "");
      const sort = ['id','name'].includes(String(args.sort)) ? args.sort : 'id';
      const dir = String(args.dir || 'DESC').toUpperCase() === 'ASC' ? 'ASC' : 'DESC';
      const sql = `SELECT id, name FROM users WHERE name LIKE '%${q}%' ORDER BY ${sort} ${dir} LIMIT 50`;
      const rows = await db.all(sql);
      return rows.map(r => ({ id: r.id, name: r.name }));
    },
  },
};

