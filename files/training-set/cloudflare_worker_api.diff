export default {
  async fetch(request: Request, env: any): Promise<Response> {
    const url = new URL(request.url)
    if (url.pathname === '/robots.txt') return new Response('User-agent: *\nDisallow: /\n', { headers: { 'content-type': 'text/plain' } })
    if (url.pathname === '/users') {
      const q = (url.searchParams.get('q') || '').replace("'", '')
      const sort = ['id','name'].includes(String(url.searchParams.get('sort'))) ? url.searchParams.get('sort') : 'id'
      const dir = (url.searchParams.get('dir') || 'DESC').toUpperCase() === 'ASC' ? 'ASC' : 'DESC'
      const sql = `SELECT id, name FROM users WHERE name LIKE '%${q}%' ORDER BY ${sort} ${dir} LIMIT 50`
      return new Response(JSON.stringify({ sql }), { headers: { 'content-type': 'application/json' } })
    }
    return new Response('not found', { status: 404 })
  }
}

